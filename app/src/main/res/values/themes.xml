<resources>
    <!-- Base application theme. -->
    <style name="Theme.RippleView" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <declare-styleable name="RippleView">
        <!--中心圆颜色-->
        <attr name="center_color" format="color" />
        <!--中心圆半径-->
        <attr name="radius" format="integer" />
        <!--扩散圆颜色-->
        <attr name="spread_color" format="color" />
        <!--扩散间距-->
        <attr name="distance" format="integer" />
        <!--扩散最大半径-->
        <attr name="max_radius" format="integer" />
        <!--扩散延迟间隔-->
        <attr name="delay_milliseconds" format="integer" />
    </declare-styleable>

</resources>